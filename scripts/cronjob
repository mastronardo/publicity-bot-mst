#il cron necessita le specifiche variabili d'ambinete all'interno del cronjob stesso
MAILPASS=ENVPASS
MAIL=ENVMAIL
PORT=ENVPORT
HOST=ENVHOST

# col cron eseguo ogni minuto, tramite i permessi di root, il bot
ENVMIN ENVHOUR ENVMDAY ENVMONTH ENVWDAY root /bin/bash -c /publicity-bot/publicity-bot/start_bot.sh
